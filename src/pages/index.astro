---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import Linkedin from "../components/icons/Linkedin.astro";
import MailIcon from "../components/icons/MailIcon.astro";
import GitHub from "../components/icons/GitHub.astro";
import SocialPills from "../components/SocialPills.astro";
import Experience from "../components/Experience.astro";
import SectionContainer from "../components/SectionContainer.astro";
import ExperienceIcon from "../components/icons/ExperienceIcon.astro";
import CodeIcon from "../components/icons/CodeIcon.astro";
import Projects from "../components/Projects.astro";
---

<Layout title="Portfolio De Fabián Casas">
	<main>
		<SectionContainer id="inicio">
			<h1
				class="text-white text-4xl lg:text-5xl font-bold flex flex-col sm:flex-row gap-x-4 pb-4"
			>
				Wena!, soy Fabián<div class="flex justify-start items-center">
					<Badge>DISPONIBLE PARA TRABAJAR</Badge>
				</div>
			</h1>
			<h2 class="text-xl lg:text-2xl opacity-80 text-wrap max-w-[700px]">
				<span>2 años Estudiando</span>
				<span class="text-red-200/90"
					>Analista Programador Computacional</span
				>. <span class="text-blue-200/90"
					>Soy De Santiago, Chile 🆑.</span
				>
				<span class="opacity-85"
					>Tengo muchas ganas de seguir aprendiendo de este rubro para
					superarme cada día más 📚.</span
				>
			</h2>
			<nav class="flex gap-4 mt-8 flex-wrap">
				<SocialPills href="https://www.linkedin.com/in/fabi%C3%A1n-casas-913222310/">
					<Linkedin class="size-4 md:size-5" />
					LinkedIn
				</SocialPills>
				<SocialPills href="https://github.com/Fabiantonio">
					<GitHub class="size-4 md:size-5" />
					Github
				</SocialPills>
				<SocialPills href="mailto:vntoniojr@outlook.com">
					<MailIcon class="size-4" />
					vntoniojr@outlook.com
				</SocialPills>
			</nav>
		</SectionContainer>

		<SectionContainer id="experiencia">
			<h2 class="text-2xl font-semibold mb-6 flex gap-x-3 items-center">
				<ExperienceIcon class="size-7" />
				Experiencia
			</h2>
			<Experience />
		</SectionContainer>

		<SectionContainer id="proyectos">
			<h2 class="text-2xl font-semibold mb-6 flex gap-x-3 items-center">
				<CodeIcon class="size-7" />
				Proyectos
			</h2>
			<Projects />
		</SectionContainer>
	</main>
</Layout>
