---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import Linkedin from "../components/icons/Linkedin.astro";
import MailIcon from "../components/icons/MailIcon.astro";
import GitHub from "../components/icons/GitHub.astro";
import SocialPills from "../components/SocialPills.astro";
import Experience from "../components/Experience.astro";
import SectionContainer from "../components/SectionContainer.astro";
import ExperienceIcon from "../components/icons/ExperienceIcon.astro";
import CodeIcon from "../components/icons/CodeIcon.astro";
import Projects from "../components/Projects.astro";
---

<script>
	import { stagger, spring, timeline, type TimelineDefinition, inView } from "motion";

	function animateElement(element:any) {
		const sequence = [
			[
				element,
				{ y: ["40%", "0%"], opacity: [0, 1] },
				{
					at: "-0.1",
					duration: 0.4,
					delay: stagger(0.3),
					easing: spring({
						velocity: 100,
						stiffness: 50,
						damping: 10,
					}),
				},
			],
		];

		timeline(sequence as TimelineDefinition);
	}

	document.addEventListener("DOMContentLoaded", () => {
		const cards = document.querySelectorAll(".card-animate");
		cards.forEach((card) => {
			inView(card, () => {
				animateElement(card);
			}, {});
		});
	});
</script>

